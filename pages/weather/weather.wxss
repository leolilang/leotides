   /* 7日天气预报表格 */
  .forecast-container {
    width: 100%;
    background: #ffffff;
    border-radius: 10rpx;
    overflow: hidden;
    margin-top: 20rpx;
    box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
  }
  
  .forecast-header {
    display: flex;
    justify-content: space-between;
    background: #007aff;
    color: #ffffff;
    font-weight: bold;
    padding: 15rpx 0;
    text-align: center;
  }
  
  .header-cell {
    flex: 1;
    text-align: center;
  }
  
  .forecast-row {
    display: flex;
    justify-content: space-between;
    padding: 15rpx 0;
    border-bottom: 1rpx solid #e0e0e0;
    text-align: center;
  }
  
  .forecast-cell {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .date-text {
    font-size: 28rpx;
    font-weight: bold;
    color: #333;
  }
  
  .weekday-text {
    font-size: 24rpx;
    color: #666;
  }
  
  .weather-cell {
    flex-direction: row;
    justify-content: center;
    align-items: center;
  }
  
  .weather-icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
  }
  
  .weather-text {
    font-size: 26rpx;
    color: #333;
  }
  
  .temp-text {
    font-size: 26rpx;
    color: #ff5722;
  }
  
  .wind-text {
    font-size: 24rpx;
    color: #666;
  }
  

  /* 7日天气预报 */
  .daily-forecast {
    width: 90%;
    margin-top: 20rpx;
    background: #ffffff;
    padding: 20rpx;
    border-radius: 20rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  }
  
  .forecast-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15rpx 0;
    border-bottom: 1rpx solid #e0e0e0;
  }
  
  .date {
    font-size: 28rpx;
  }
  
  .forecast-icon {
    width: 60rpx;
    height: 60rpx;
  }
  
  .temp-range {
    font-size: 28rpx;
  }
  
  /* 额外天气详情 */
  .forecast-details {
    padding: 10rpx;
    font-size: 24rpx;
    color: #666;
    background: #f9f9f9;
    border-radius: 10rpx;
    margin: 10rpx 0;
  }
  
  .forecast-item:last-child {
    border-bottom: none;
  }
  
 /* 加载效果 */
  .loading {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 100rpx;
  }
  
  .loading-icon {
    width: 60rpx;
    height: 60rpx;
    margin-bottom: 20rpx;
  }