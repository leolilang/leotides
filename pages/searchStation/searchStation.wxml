<!-- searchStation.wxml -->
<view class="container">
  <!-- 搜索输入区域 -->
  <view class="search-container">
    <input type="text" placeholder="请输入潮汐站点名称" value="{{ searchKeyword }}" bindinput="onInputChange" class="search-input" />
    <button bindtap="onSearch" class="search-button">搜索</button>
  </view>
  <!-- 搜索结果列表 -->
  <view class="station-list">
    <block wx:for="{{ stationList }}" wx:key="id">
      <view class="station-item" data-index="{{ index }}" bindtap="onStationSelect">
        <text>{{ item.name }}</text>
      </view>
    </block>
  </view>
</view>
