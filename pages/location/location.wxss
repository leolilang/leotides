.container {
    padding: 20rpx;
    background: #f8f9fa;
    min-height: 100vh;
}

.search-box {
    display: flex;
    padding: 20rpx;
    background: #fff;
    border-radius: 12rpx;
    margin-bottom: 20rpx;
}

.search-box input {
    flex: 1;
    height: 72rpx;
    font-size: 28rpx;
}

.search-btn {
    width: 120rpx;
    height: 72rpx;
    background: #4CAF50;
    color: #fff;
    border-radius: 8rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: 20rpx;
}

.location-list {
    background: #fff;
    border-radius: 12rpx;
}

.location-item {
    padding: 30rpx;
    border-bottom: 1px solid #eee;
}

.location-item:last-child {
    border-bottom: none;
}

.location-info {
    display: flex;
    flex-direction: column;
    gap: 8rpx;
}

.location-name {
    font-size: 32rpx;
    color: #333;
}

.location-city {
    font-size: 24rpx;
    color: #666;
}

.loading {
    text-align: center;
    padding: 40rpx;
    color: #666;
} 