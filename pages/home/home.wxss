/* home.wxss */
.navigation-bar {
    height: 44px;
    line-height: 44px;
    text-align: center;
    background-color: #008000;
    color: #ffffff;
    font-size: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
}


.content-container {
    padding: 16px;
}

.content-container h1 {
    font-size: 24px;
    color: #333;
    text-align: center;
    margin-bottom: 16px;
}

.content-container p {
    font-size: 16px;
    color: #666;
    text-align: center;
    margin-bottom: 16px;
}

.content-container button {
    background-color: #008000;
    color: #ffffff;
    border: none;
    border-radius: 4px;
    padding: 8px 16px;
    font-size: 14px;
    cursor: pointer;
}

.content-container table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 16px;
}

.content-container table td {
    border: 1px solid #ccc;
    padding: 8px;
    text-align: center;
}

.content-container .tidesBenchmark {
    font-size: 14px;
    color: #999;
    margin-bottom: 8px;
}

.profile-btn {
    position: fixed;
    bottom: 20px;
    right: 20px;
    padding: 12px 24px;
    background-color: #008000;
    color: white;
    border-radius: 20px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

/* 新增 echarts 组件样式 */
.ec-canvas {
  width: 100%;
  height: 300px;
  margin-top: 20px;
}

/* 用户头像样式 */
.user-avatar {
    position: absolute;
    top: 8px;
    right: 16px;
    width: 28px;
    height: 28px;
    border-radius: 50%;
    overflow: hidden;
}

.user-avatar image {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.tidesPoint {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 20px;
    background-color: #ffffff; /* 表格背景颜色 */
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1); /* 添加阴影效果 */
}
.tidesPoint th, .tidesPoint td {
    border: 1px solid #ddd;
    padding: 12px;
    text-align: center;
}
.tidesPoint th {
    background-color: #e6f7ff; /* 表头背景颜色，浅蓝色 */
    color: #333; /* 表头文字颜色 */
    font-weight: bold;
}
.tidesPoint tr:nth-child(even) {
    background-color: #f2f2f2; /* 偶数行背景颜色 */
}
.tidesPoint tr:hover {
    background-color: #e9e9e9; /* 鼠标悬停行背景颜色 */
}
.tidesPoint caption {
    caption-side: top;
    font-size: 1.5em;
    margin-bottom: 10px;
    font-weight: bold;
    color: #333;
}

.picker {
    color: white;
    margin-left: 10px;
}

