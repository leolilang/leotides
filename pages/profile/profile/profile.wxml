<scroll-view scroll-y="true" style="height: 100vh;">
    <view class="content-container">
        <!-- 头像选择 -->
        <view class="avatar-container">
            <button open-type="chooseAvatar" bind:chooseavatar="onChooseAvatar">选择头像</button>
            <image src="{{userInfo.avatarUrl}}" mode="aspectFit"></image>
        </view>
        <!-- 昵称输入 -->
        <view class="nickname-container info-item">
            <text>昵称</text>
            <input type="text" bind:change="onInputChange" value="{{userInfo.nickName}}"></input>
        </view>
        <!-- 生日选择 -->
        <view class="info-detail">
            <text>生日</text>
            <picker mode="date" bindchange="onBirthdayChange" value="{{userInfo.birthday}}">
                <view>{{userInfo.birthday || '请选择生日'}}</view>
            </picker>
        </view>
        <!-- 地区选择 -->
        <view class="info-detail">
            <text>地区</text>
            <picker mode="region" bindchange="onRegionChange" value="{{userInfo.region}}">
                <view>{{userInfo.region.length > 0 ? userInfo.region.join(' ') : '请选择地区'}}</view>
            </picker>
        </view>
        <!-- 个人简介 -->
        <view class="info-detail">
            <text>个人简介</text>
            <textarea bind:change="onIntroductionChange" value="{{userInfo.introduction}}"></textarea>
        </view>
        <!-- 确认按钮 -->
        <button class="confirm-button" bindtap="onConfirm">确认</button>
    </view>
</scroll-view>