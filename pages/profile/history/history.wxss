/* history.wxss */
.history-container {
    min-height: 100vh;
    background-color: #f5f5f5;
    padding: 20rpx;
}

.header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx;
    background-color: #ffffff;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
}

.title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
}

.clear-btn {
    font-size: 28rpx;
    color: #ff4d4f;
}

.history-list {
    background-color: #ffffff;
    border-radius: 10rpx;
    overflow: hidden;
}

.history-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx;
    border-bottom: 1rpx solid #eee;
}

.history-item:last-child {
    border-bottom: none;
}

.history-content {
    flex: 1;
}

.history-title {
    font-size: 30rpx;
    color: #333;
    margin-bottom: 10rpx;
    display: block;
}

.history-time {
    font-size: 24rpx;
    color: #999;
}

.history-actions {
    margin-left: 20rpx;
}

.delete-btn {
    font-size: 26rpx;
    color: #ff4d4f;
    padding: 10rpx 20rpx;
    border: 1rpx solid #ff4d4f;
    border-radius: 30rpx;
}

.empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 100rpx 0;
}

.empty-icon {
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 20rpx;
}

.empty-text {
    font-size: 28rpx;
    color: #999;
}

.loading {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 100rpx 0;
}

.loading-icon {
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 20rpx;
} 