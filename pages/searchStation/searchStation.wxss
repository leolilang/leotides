/* searchStation.wxss */
.container {
    padding: 10px;
    background-color: #ffffff;
  }
  
  /* 搜索输入区域 */
  .search-container {
    display: flex;
    align-items: center;
    padding: 10px;
    background-color: #f8f8f8;
    border-radius: 8px;
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
    margin: 10px auto;
    width: 90%;
}

.search-input {
    flex: 1;
    padding: 8px;
    border: 1px solid #ddd;
    border-radius: 5px;
    font-size: 14px;
    outline: none;
}

.search-button {
    padding: 8px 15px;
    margin-left: 8px;
    background-color: #4CAF50;
    color: white;
    border: none;
    border-radius: 5px;
    font-size: 14px;
    cursor: pointer;
}

.search-button:hover {
    background-color: #45a049;
}
  
  /* 站点列表样式 */
  .station-list {
    margin: 10px auto;
    width: 90%;
}

.station-item {
    padding: 12px;
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
    margin-bottom: 8px;
    font-size: 16px;
    color: #333;
    text-align: center;
    transition: background-color 0.3s ease-in-out;
}

.station-item:hover {
    background-color: #e3f2fd;
}

  