/* profile.wxss */
.profile-container {
    min-height: 100vh;
    background-color: #f5f5f5;
}

/* 用户头部样式 */
.user-header {
    background-color: #ffffff;
    padding: 30rpx;
    display: flex;
    align-items: flex-start;
    margin-bottom: 20rpx;
}

.avatar-container {
    position: relative;
    margin-right: 30rpx;
    flex-shrink: 0;
}

.avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    border: 4rpx solid #ffffff;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.avatar-edit {
    position: absolute;
    bottom: -20rpx;
    left: 50%;
    transform: translateX(-50%);
    font-size: 20rpx;
    color: #666;
    white-space: nowrap;
}

.user-info {
    flex: 1;
    min-width: 0; /* 防止内容溢出 */
}

.nickname {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 10rpx;
    display: block;
}

.intro {
    font-size: 28rpx;
    color: #666;
    margin-bottom: 20rpx;
    display: block;
    word-break: break-all;
}

.edit-btn {
    font-size: 24rpx;
    color: #008000;
    background: none;
    border: 1rpx solid #008000;
    padding: 8rpx 20rpx;
    border-radius: 30rpx;
    width: auto;
    min-width: 160rpx;
}

/* 编辑表单样式 */
.edit-form {
    width: 100%;
}

.input-group {
    margin-bottom: 20rpx;
}

.input-label {
    font-size: 28rpx;
    color: #333;
    margin-bottom: 10rpx;
    display: block;
}

.nickname-input {
    font-size: 28rpx;
    color: #333;
    padding: 16rpx;
    border: 1rpx solid #ddd;
    border-radius: 8rpx;
    background-color: #f8f8f8;
    width: 100%;
    box-sizing: border-box;
    height: 80rpx;
    line-height: 48rpx;
}

.intro-input {
    font-size: 28rpx;
    color: #666;
    padding: 16rpx;
    border: 1rpx solid #ddd;
    border-radius: 8rpx;
    background-color: #f8f8f8;
    width: 100%;
    height: 160rpx;
    box-sizing: border-box;
}

.edit-buttons {
    display: flex;
    gap: 20rpx;
    margin-top: 30rpx;
}

.save-btn, .cancel-btn {
    flex: 1;
    font-size: 28rpx;
    padding: 16rpx 0;
    border-radius: 8rpx;
    width: auto;
    min-width: 120rpx;
}

.save-btn {
    background-color: #008000;
    color: #ffffff;
}

.cancel-btn {
    background-color: #f5f5f5;
    color: #666;
}

/* 功能列表样式 */
.function-list {
    background-color: #ffffff;
}

.function-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx;
    border-bottom: 1rpx solid #eee;
}

.function-item:last-child {
    border-bottom: none;
}

.function-title {
    font-size: 30rpx;
    color: #333;
}

.arrow {
    color: #999;
    font-size: 30rpx;
}

/* 按钮点击效果 */
button::after {
    border: none;
}

button {
    margin: 0;
    padding: 0;
    line-height: 1;
    background: none;
} 