/* 让整个页面居中 */
page {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    padding: 0;
    margin: 0;
    background-color: #f4f4f4;
}

/* 个人中心内容容器 */
.content-container {
    width: 90%;
    max-width: 400px;
    padding: 20px;
    background-color: #fff;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    border-radius: 12px;
    text-align: center;
}

/* 头像区域 */
.avatar-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 20px;
}

.avatar-container button {
    background-color: #008000;
    color: white;
    border: none;
    border-radius: 5px;
    padding: 10px 20px;
    margin-bottom: 10px;
    transition: background-color 0.3s;
}

.avatar-container button:hover {
    background-color: #006400;
}

.avatar-container image {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid #008000;
}

/* 昵称和简介输入框 */
.nickname-container,
.profile-intro {
    display: flex;
    flex-direction: column;
    text-align: left;
    margin-bottom: 20px;
}

.nickname-container text,
.profile-intro text {
    font-size: 14px;
    margin-bottom: 5px;
    font-weight: bold;
    color: #333;
}

.nickname-container input,
.profile-intro input {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 16px;
    transition: border 0.3s;
}

.nickname-container input:focus,
.profile-intro input:focus {
    border: 1px solid #008000;
}

/* 按钮优化 */
.confirm-button,
.logout-button {
    width: 100%;
    padding: 12px;
    font-size: 16px;
    font-weight: bold;
    border: none;
    border-radius: 8px;
    color: white;
    cursor: pointer;
    transition: background-color 0.3s;
}

.confirm-button {
    background-color: #008000;
}

.confirm-button:hover {
    background-color: #006400;
}

.logout-button {
    background-color: #d9534f; /* 红色按钮 */
    margin-top: 10px;
}

.logout-button:hover {
    background-color: #c9302c;
}
