/* 城市选择 */
.city-bar {
    display: flex;
    align-items: center;
    padding: 30rpx;
    font-size: 36rpx;
  }

  .arrow-icon {
    width: 32rpx;
    height: 32rpx;
    margin-left: 15rpx;
  }

/* 页面布局 */
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20rpx;
    background: linear-gradient(to bottom, #e0f7fa, #ffffff); /* 由浅蓝到白色的渐变 */
  }
  
  /* 当前天气 */
  .current-weather {
    width: 90%;
    background: #ffffff;
    padding: 30rpx;
    border-radius: 20rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
    text-align: center;
  }
  
  .city {
    font-size: 36rpx;
    font-weight: bold;
    margin-bottom: 10rpx;
  }
  .space {
    width: 25px; /* 可按需调整间距大小 */
    display: inline-block;
}
  .weather-icon {
    width: 60rpx;
    height: 60rpx;
  }
  
  .temp {
    font-size: 36rpx;
    font-weight: bold;
    margin: 10rpx 0;
  }
  
  .weather,
  .humidity,
  .wind {
    font-size: 28rpx;
    margin-top: 5rpx;
  }
