.container {
    padding: 20rpx;
    background: #f8f9fa;
    min-height: 100vh;
}

.search-box {
    display: flex;
    padding: 20rpx;
    background: #fff;
    border-radius: 12rpx;
    margin-bottom: 20rpx;
}

.search-box input {
    flex: 1;
    height: 72rpx;
    font-size: 28rpx;
    padding: 0 20rpx;
}

.search-btn {
    width: 120rpx;
    height: 72rpx;
    background: #4CAF50;
    color: #fff;
    border-radius: 8rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: 20rpx;
}

.station-list {
    background: #fff;
    border-radius: 12rpx;
}

.station-item {
    padding: 30rpx;
    border-bottom: 1px solid #eee;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
    overflow: hidden;
}

.station-item:active {
    background: #f5f5f5;
}

.station-item::after {
    content: '';
    position: absolute;
    right: 30rpx;
    top: 50%;
    transform: translateY(-50%);
    width: 16rpx;
    height: 16rpx;
    border-top: 2rpx solid #999;
    border-right: 2rpx solid #999;
    transform: rotate(45deg);
}

.station-info {
    display: flex;
    flex-direction: column;
    gap: 8rpx;
    flex: 1;
}

.station-name {
    font-size: 32rpx;
    color: #333;
    font-weight: 500;
}

.station-area {
    font-size: 24rpx;
    color: #666;
}

.station-meta {
    display: flex;
    align-items: center;
    gap: 10rpx;
}

.station-rank {
    padding: 4rpx 12rpx;
    background: #E8F5E9;
    color: #4CAF50;
    border-radius: 20rpx;
    font-size: 22rpx;
}

.empty-state, .loading-state {
    text-align: center;
    padding: 40rpx;
    color: #666;
} 