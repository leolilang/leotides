/* pages/weather/weather.wxss */
.container {
    padding: 20rpx;
    background: #f5f5f5;
  }
  
  .current-box {
    display: flex;
    align-items: center;
    padding: 30rpx;
    background: white;
    border-radius: 16rpx;
  }
  
  .current-temp {
    font-size: 72rpx;
    margin-right: 40rpx;
  }
  
  .hourly-scroll {
    white-space: nowrap;
    margin: 20rpx 0;
    background: white;
    padding: 20rpx 0;
  }
  
  .hour-item {
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    width: 120rpx;
    margin: 0 20rpx;
  }
  
  .weather-icon {
    width: 60rpx;
    height: 60rpx;
    margin: 10rpx 0;
  }
  
  .daily-box {
    background: white;
    border-radius: 16rpx;
    padding: 20rpx;
  }
  
  .day-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #eee;
  }
  
  .icon-small {
    width: 40rpx;
    height: 40rpx;
    margin: 0 10rpx;
  }
  
  .life-index {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20rpx;
    margin-top: 20rpx;
  }
  
  .index-item {
    background: white;
    padding: 20rpx;
    border-radius: 8rpx;
  }
  
  .air-quality {
    margin-top: 20rpx;
    padding: 20rpx;
    background: white;
    border-radius: 8rpx;
  }