/* home.wxss */
.container {
    min-height: 100vh;
    background-color: #f8f9fa;
}

/* 导航栏样式 */
.navigation-bar {
    padding: 20rpx 30rpx;
    background: linear-gradient(135deg, #4CAF50, #2E7D32);
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #fff;
}

.location-section {
    flex: 1;
}

.location-picker {
    display: flex;
    align-items: center;
    gap: 8rpx;
}

.location-name {
    font-size: 36rpx;
    font-weight: 500;
}

.location-arrow {
    font-size: 24rpx;
    opacity: 0.8;
}

.action-section {
    display: flex;
    gap: 20rpx;
}

.action-icon {
    width: 48rpx;
    height: 48rpx;
    filter: brightness(0) invert(1);
}

/* 日期选择器样式 */
.date-picker-section {
    background: #fff;
    padding: 20rpx 30rpx;
    border-bottom: 1px solid #eee;
}

.date-content {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10rpx;
}

.selected-date {
    font-size: 32rpx;
    color: #333;
    font-weight: 500;
}

.date-arrow {
    font-size: 24rpx;
    color: #666;
}

/* 当前潮汐状态样式 */
.current-tide-section {
    background: #fff;
    padding: 30rpx;
    margin: 20rpx;
    border-radius: 16rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.tide-status {
    display: flex;
    flex-direction: column;
    gap: 8rpx;
}

.status-text {
    font-size: 40rpx;
    font-weight: bold;
    color: #4CAF50;
}

.status-time {
    font-size: 24rpx;
    color: #666;
}

.tide-height {
    display: flex;
    align-items: baseline;
    gap: 4rpx;
}

.height-value {
    font-size: 48rpx;
    font-weight: bold;
    color: #333;
}

.height-unit {
    font-size: 24rpx;
    color: #666;
}

/* 图表区域样式 */
.chart-section {
    background: #fff;
    margin: 20rpx;
    border-radius: 16rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
    overflow: hidden;
}

.chart-container {
    height: 400rpx;
    padding: 20rpx;
}

/* 潮汐时间表样式 */
.tide-table-section {
    background: #fff;
    margin: 20rpx;
    border-radius: 16rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
    overflow: hidden;
}

.table-header {
    padding: 20rpx 30rpx;
    border-bottom: 1px solid #eee;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.header-title {
    font-size: 32rpx;
    font-weight: 500;
    color: #333;
}

.header-date {
    font-size: 28rpx;
    color: #666;
}

.table-content {
    padding: 0 30rpx;
}

.table-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 0;
    border-bottom: 1px solid #f5f5f5;
}

.table-row:last-child {
    border-bottom: none;
}

.row-time {
    flex: 1;
}

.time-text {
    font-size: 28rpx;
    color: #333;
}

.row-type {
    flex: 1;
    display: flex;
    justify-content: center;
}

.type-tag {
    padding: 4rpx 16rpx;
    border-radius: 20rpx;
    font-size: 24rpx;
}

.high-tide {
    background: #E8F5E9;
    color: #4CAF50;
}

.low-tide {
    background: #FFF3E0;
    color: #FF9800;
}

.row-height {
    flex: 1;
    text-align: right;
}

.height-text {
    font-size: 28rpx;
    color: #333;
    font-weight: 500;
}

/* 加载状态样式 */
.loading-section {
    padding: 40rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16rpx;
}

.loading-spinner {
    width: 60rpx;
    height: 60rpx;
    border: 4rpx solid #f3f3f3;
    border-top: 4rpx solid #4CAF50;
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

.loading-text {
    font-size: 28rpx;
    color: #666;
}

.retry-text {
    font-size: 24rpx;
    color: #999;
}

/* 空状态样式 */
.empty-section {
    padding: 60rpx 40rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20rpx;
}

.empty-icon {
    width: 200rpx;
    height: 200rpx;
    opacity: 0.5;
}

.empty-text {
    font-size: 28rpx;
    color: #999;
}